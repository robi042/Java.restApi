# Copy this file to .env and fill with your values. Never commit .env.
# Load before run: export $(grep -v '^#' .env | xargs)

# Database (PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/yourdb
DB_USERNAME=youruser
DB_PASSWORD=yourpassword

# JWT (secret must be at least 32 characters for HS256)
JWT_SECRET=your-at-least-32-character-secret-key-here
# Optional: token expiry in milliseconds (default 3600000 = 1 hour)
JWT_EXPIRATION=3600000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
